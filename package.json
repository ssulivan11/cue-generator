{
  "name": "cue-generator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "--------- BUILDING -------------------------------": "",
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "start": "sirv public --single",
    "--------- INTEGRITY ------------------------------": "",
    "format": "pretty-quick --write .",
    "format:check": "pretty-quick --check .",
    "lint": "eslint . --ext .svelte,.ts --fix",
    "bsize": "buildsize-cli",
    "--------- TESTING --------------------------------": "",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "cy:start": "start-server-and-test dev http://localhost:5000 cy:open",
    "cy:ci": "start-server-and-test start http://localhost:5000 cy:run",
    "--------- HELPERS --------------------------------": "",
    "nuke": "npm cache clean --force && rm -rf node_modules && npm install"
  },
  "lint-staged": {
    "*.{ts,svelte}": [
      "npm run lint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged && npm run test && npm run build"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/svelte": "^3.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/jest": "^27.4.0",
    "@types/marked": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "buildsize-cli": "^1.0.6",
    "cypress": "^9.4.1",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-transform-svelte": "^2.1.1",
    "lint-staged": "^10.2.7",
    "moment": "^2.29.1",
    "node-sass": "^7.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^1.1.0",
    "pretty-quick": "^2.0.1",
    "rollup": "^2.12.1",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.49.0",
    "shelljs": "^0.8.5",
    "sirv-cli": "^0.4.4",
    "start-server-and-test": "^1.14.0",
    "svelte-check": "^1.1.19",
    "svelte-clipboard": "^1.0.0",
    "svelte-eslint-parser": "^0.13.0",
    "svelte-jester": "^1.1.5",
    "svelte-navigator": "^3.1.5",
    "svelte-preprocess": "^4.6.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "marked": "^4.0.12",
    "svelte": "^3.29.6"
  }
}
